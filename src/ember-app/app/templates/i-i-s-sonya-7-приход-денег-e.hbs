<h3 class="ui header">{{t "forms.i-i-s-sonya-7-приход-денег-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.iD
      class=(if (v-get validationModel "iD" "isInvalid") "error")
      label=(t "forms.i-i-s-sonya-7-приход-денег-e.iD-caption")
      data-test-i-i-s-sonya-7-приход-денег-e-iD=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "iD" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-sonya-7-приход-денег-e.дата-caption"}}</label>
    {{flexberry-simpledatetime
      type="date"
      readonly=readonly
      value=model.дата
      class=(if (v-get validationModel "дата" "isInvalid") "error")
      data-test-i-i-s-sonya-7-приход-денег-e-дата=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "дата" "message")}}
  </div>
  <div class="field" data-test-i-i-s-sonya-7-приход-денег-e-типПрихода="true">
    <label>{{t "forms.i-i-s-sonya-7-приход-денег-e.типПрихода-caption"}}</label>
    {{flexberry-dropdown
      items=(flexberry-enum "i-i-s-sonya-7-тип-прихода")
      value=model.типПрихода
      class=(if (v-get validationModel "типПрихода" "isInvalid") "error")
      readonly=readonly
    }}
    {{flexberry-validationmessage error=(v-get validationModel "типПрихода" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=true
      value=model.клиенты.фИО
      class=(if (v-get validationModel.клиенты "фИО" "isInvalid") "error")
      label=(t "forms.i-i-s-sonya-7-приход-денег-e.клиенты.фИО-caption")
      data-test-i-i-s-sonya-7-приход-денег-e-клиенты-фИО=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel.клиенты "фИО" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=true
      value=model.финансисты.фИО
      class=(if (v-get validationModel.финансисты "фИО" "isInvalid") "error")
      label=(t "forms.i-i-s-sonya-7-приход-денег-e.финансисты.фИО-caption")
      data-test-i-i-s-sonya-7-приход-денег-e-финансисты-фИО=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel.финансисты "фИО" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.сумма
      class=(if (v-get validationModel "сумма" "isInvalid") "error")
      label=(t "forms.i-i-s-sonya-7-приход-денег-e.сумма-caption")
      data-test-i-i-s-sonya-7-приход-денег-e-сумма=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "сумма" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-sonya-7-приход-денег-e.переченьТоваров-caption"}}</label>
    {{flexberry-groupedit
      componentName="переченьТоваровGroupEdit"
      mainModelProjection=modelProjection
      modelProjection=modelProjection.attributes.переченьТоваров
      content=model.переченьТоваров
      readonly=readonly
      orderable=false
      class=(if (v-get validationModel "переченьТоваров" "isInvalid") "error")
      data-test-i-i-s-sonya-7-приход-денег-e-переченьТоваров=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "переченьТоваров" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-sonya-7-приход-денег-e.переченьУслуг-caption"}}</label>
    {{flexberry-groupedit
      componentName="переченьУслугGroupEdit"
      mainModelProjection=modelProjection
      modelProjection=modelProjection.attributes.переченьУслуг
      content=model.переченьУслуг
      readonly=readonly
      orderable=false
      class=(if (v-get validationModel "переченьУслуг" "isInvalid") "error")
      data-test-i-i-s-sonya-7-приход-денег-e-переченьУслуг=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "переченьУслуг" "message")}}
  </div>
</form>
