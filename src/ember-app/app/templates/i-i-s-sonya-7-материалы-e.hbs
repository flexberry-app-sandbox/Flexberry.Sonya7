<h3 class="ui header">{{t "forms.i-i-s-sonya-7-материалы-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.iD
      class=(if (v-get validationModel "iD" "isInvalid") "error")
      label=(t "forms.i-i-s-sonya-7-материалы-e.iD-caption")
      data-test-i-i-s-sonya-7-материалы-e-iD=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "iD" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.наименование
      class=(if (v-get validationModel "наименование" "isInvalid") "error")
      label=(t "forms.i-i-s-sonya-7-материалы-e.наименование-caption")
      data-test-i-i-s-sonya-7-материалы-e-наименование=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "наименование" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.марка
      class=(if (v-get validationModel "марка" "isInvalid") "error")
      label=(t "forms.i-i-s-sonya-7-материалы-e.марка-caption")
      data-test-i-i-s-sonya-7-материалы-e-марка=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "марка" "message")}}
  </div>
  <div class="field" data-test-i-i-s-sonya-7-материалы-e-единицы="true">
    <label>{{t "forms.i-i-s-sonya-7-материалы-e.единицы-caption"}}</label>
    {{flexberry-dropdown
      items=(flexberry-enum "i-i-s-sonya-7-единицы")
      value=model.единицы
      class=(if (v-get validationModel "единицы" "isInvalid") "error")
      readonly=readonly
    }}
    {{flexberry-validationmessage error=(v-get validationModel "единицы" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.стоимость
      class=(if (v-get validationModel "стоимость" "isInvalid") "error")
      label=(t "forms.i-i-s-sonya-7-материалы-e.стоимость-caption")
      data-test-i-i-s-sonya-7-материалы-e-стоимость=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "стоимость" "message")}}
  </div>
</form>
